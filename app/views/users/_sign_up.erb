<h1>Sign Up</h1>

<% form_for(:user, user, :url => users_path, :method => "post") do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag "token", user.perishable_token if finish_registration %>
  <%= f.hidden_field :email if finish_registration %>
  
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <% if finish_registration %>
      <%= user.email %>
    <% else %>
      <%= f.text_field :email %>
    <% end %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit 'Sign Up' %>
  </p>
<% end %>
