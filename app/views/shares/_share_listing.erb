<div class="share_listing">
  <div class="header">
    <span class="title"> 
      <% if use_url %>
        <%= link_to share_listing.link.title, share_listing.link.url, :target => "_blank" %>
      <% else %>
        <%= link_to share_listing.link.title, share_path(share_listing.id) %>
      <% end %>
    </span>
    <span class="domain">(<%= share_listing.link.domain %>)</span>
  </div>
  <br clear="all" />

  <div class="footer">
    Shared by
    
    <span class="username">
      <% submitter = share_listing.link.submitter %>
      <%= link_to me_ify(submitter), user_path(submitter), :class => "light_link" %>
    </span>
    
    <%= time_ago_in_words(share_listing.submitted_time) %> ago
    
    with
    
    <%= share_listing.other_recipients.collect {|r| link_to me_ify(r), user_path(r), :class => "light_link"}.to_sentence %>
  </div>

</div>

<br clear="all" />
<br />