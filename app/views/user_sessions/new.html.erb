<h1>Log In</h1>

<% form_for @user_session do |f| %>
  <%= f.error_messages :header_message => "", :message => "Problem logging in:" %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.check_box :remember_me %><%= f.label :remember_me %></p>
  <p><%= f.submit "Log In" %></p>
<% end %>

<p>Or <%= link_to "create an account", new_user_path %> if you don't have one.</p>